(ns test.clojure-evaluation
  (:require
   [clojure.test :refer [begin-tests end-tests is testing]]))

(begin-tests (ns-name *ns*))

(is (= () '()))
(is (= [] '[]))
(is (= #{} '#{}))
(is (= {} '{}))

(is (= () `()))
(is (= [] `[]))
(is (= #{} `#{}))
(is (= {} `{}))

(is (= '(1) `(1)))
(is (= [1] `[1]))
(is (= #{1} `#{1}))
(is (= {1 2} `{1 2}))

(is (= 'x 'x))
(is (= 'test.clojure-evaluation/x `x))

(is (= 1 `~1))
(is (= [1] `~[1]))
(is (= #{1} `~#{1}))
(is (= {1 2} `~{1 2}))
(is (= [1] `[~1]))
(is (= 2 `~(inc 1)))
(is (= [2] `~[(inc 1)]))

(is (= [1] `[~@[1]]))
(is (= [1] `[~@#{1}]))
(is (= [[1 2]] `[~@{1 2}]))

(end-tests (ns-name *ns*) :exit? true)
