(ns test.clojure-fn
  (:require
   [clojure.test :refer [begin-tests end-tests is testing]]))

;; FIXME: everything...

(begin-tests (ns-name *ns*))

(def q (atom nil))

(defmacro question! [what]
  `(reset! q ~what))

(defn ask []
  (question! :shall-we-play-a-game?))

(is (= nil (deref q)))
(ask)
(is (= :shall-we-play-a-game? (deref q)))

(end-tests (ns-name *ns*) :exit? true)
